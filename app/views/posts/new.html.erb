<h1>New Post</h1>

<%= form_with model: @new_post, url: user_posts_path do |form|%>
    <div>
        <%= form.label :title %> <br>
        <%= form.text_field :title, placeholder:'title'%>
    </div>

    <div class="my-2">
        <%= form.label :text %> <br>
        <%= form.text_field :text, placeholder:'text'%>
    </div>

    <div">
       <%= form.submit "Submit ", class: "bg-blue-600 text-white rounded shadow px-3 py-1" %>
    </div>
<% end %>