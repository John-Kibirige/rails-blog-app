<section>
    <%# user data %>
    <%= render 'shared/user', user: @user%>

    <ul>
       <% @posts.each do |post| %>
        <li>
            <%= link_to user_post_path(@user, post) do %>
                <%= render 'shared/post', post: post%>
                <%= render 'shared/name_comment', comments: post.retrieve_recent_comments %>
            <% end %>
        </li>
       <% end %>
    </ul>

    <button>Pagination</button>

</section>