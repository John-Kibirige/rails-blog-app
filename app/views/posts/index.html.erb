<section>
    <%# user data %>
    <%= render 'shared/user', user: @user%>

    <%= link_to "Create new Post", new_user_post_path(@user), class: "uppercase bg-green-600 text-slate-100 text-lg hover:bg-green-500 active:scale-105 ml-auto px-3 py-1 rounded block w-2/5 mt-5 text-center" %>

    <ul>
       <% @posts.each do |post| %>
        <li class="border list-none mt-4 hover:bg-slate-200 pb-3  pl-2 ">
            <%= link_to user_post_path(@user, post) do %>
                <%= render 'shared/post', post: post%>
                <hr>
                <%= render 'shared/name_comment', comments: post.retrieve_recent_comments.includes([:author]) %>
            <% end %>
        </li>
       <% end %>
    </ul>


    <div class="flex justify-between px-6">
        <button class="bg-slate-500 text-white px-3 py-1 rounded shadow mt-5 hover:bg-slate-600 active:scale-105">Pagination</button>

    </div>

</section>