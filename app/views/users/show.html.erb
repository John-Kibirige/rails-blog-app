<section>
    <%= render "shared/user", user: @user %>

    <article>
        <div class="border px-4 py-4 my-4">
          <h2 class="bio text-xl font-bold">Bio</h2>
          <p><%= @user.bio %></p>
        </div>

        <ul class="border px-4 py-4">
          <% @user.latest_three_posts.each do |post|%>
             <%= link_to user_post_path(@user, post) do %>
                <li class="hover:bg-slate-200 pb-3  pl-2">
                    <%= render "shared/post", post: post%>
                </li>
             <% end %>

          <% end %>
        </ul>

        <%= link_to user_posts_path(@user) do %>
            <button class="bg-slate-500 text-white px-3 py-1 rounded shadow mt-5 hover:bg-slate-600 active:scale-105">See all posts</button>
        <% end %>
    </article>
</section>